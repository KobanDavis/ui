{
	"name": "@kobandavis/ui",
	"version": "1.0.5",
	"repository": "https://github.com/KobanDavis/ui",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"preview": "vite preview",
		"build": "rm -rf dist && bun run build:js && bun run build:types",
		"build:js": "bun build src/index.ts --outdir dist --external react --external react-dom",
		"build:types": "tsc -p tsconfig.build.json",
		"prepublishOnly": "bun run build"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"prettier": {
		"bracketSpacing": true,
		"jsxSingleQuote": true,
		"printWidth": 150,
		"semi": false,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "none",
		"useTabs": true
	},
	"dependencies": {
		"@heroicons/react": "^2.0.18",
		"clsx": "^2.0.0",
		"color": "^3.1.3"
	},
	"devDependencies": {
		"@types/color": "^3.0.4",
		"@types/react": "^18.2.6",
		"@types/react-dom": "^18.2.4",
		"@vitejs/plugin-react": "^4.0.0",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.51.0",
		"eslint-config-react-app": "^7.0.1",
		"postcss": "^8.4.23",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tailwindcss": "^3.3.2",
		"typescript": "^5.0.4",
		"vite": "^4.4.11",
		"vite-plugin-eslint": "^1.8.1"
	},
	"peerDependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tailwindcss": "^3.3.3"
	}
}
